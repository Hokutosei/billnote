<h1>Listing years</h1>

<table>
  <tr>
    <th>Year</th>
    <th>User</th>
    <th>Mybill</th>
    <th>Mydebt</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @years.each do |year| %>
  <tr>
    <td><%= year.year %></td>
    <td><%= year.user_id %></td>
    <td><%= year.mybill_id %></td>
    <td><%= year.mydebt_id %></td>
    <td><%= link_to 'Show', year %></td>
    <td><%= link_to 'Edit', edit_year_path(year) %></td>
    <td><%= link_to 'Destroy', year, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

