<h1>Listing months</h1>

<table>
  <tr>
    <th>Year</th>
    <th>User</th>
    <th>Mydebt</th>
    <th>Mybill</th>
    <th>Year</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @months.each do |month| %>
  <tr>
    <td><%= month.year %></td>
    <td><%= month.user_id %></td>
    <td><%= month.mydebt_id %></td>
    <td><%= month.mybill_id %></td>
    <td><%= month.year_id %></td>
    <td><%= link_to 'Show', month %></td>
    <td><%= link_to 'Edit', edit_month_path(month) %></td>
    <td><%= link_to 'Destroy', month, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

